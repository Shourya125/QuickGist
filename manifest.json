{
  "manifest_version": 3,
  "name": "Quick Gist",
  "description": "The quickest way to the gist and make notes",
  "version": "1.0",
  "icons": {
    "128": "logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },
  "host_permissions": [
    "http://*/*", 
    "https://*/*"
  ],
  "permissions": ["scripting", "activeTab"]
}
